.status_bar {
  height: 25px;
  width: 100%;
}
.signUp {
  font-size: 32rpx;
  color: #272832;
  height: 88rpx;
  margin: auto;
  line-height: 88rpx;
}
.main {
  padding: 88rpx 32rpx 0;
}
.main .login,
.main .user,
.main .password,
.main .welcome,
.main .err {
  padding-left: 42rpx;
}
.main .login {
  font-size: 56rpx;
  color: #272832;
  padding-top: 314rpx;
}
.main .welcome {
  font-size: 40rpx;
  color: rgba(39, 40, 50, 0.6);
  padding-top: 14rpx;
}
.main .user,
.main .password {
  padding-top: 76rpx;
}
.main .submit {
  width: 520rpx;
  height: 96rpx;
  background-color: #ffe431;
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  margin: 120rpx auto 0;
  color: #272832;
}
.main .submit:active {
  background-color: #f3f4f6;
  color: #ffffff;
}
.main .err {
  float: left;
  font-size: 32rpx;
  color: #ff5d5b;
}

