.status_bar {
  height: 25px;
  width: 100%;
}
.top-bar .mine {
  width: 68rpx;
  height: 68rpx;
  border-radius: 20rpx;
  margin: 0 16rpx;
  float: left;
  left: 32rpx;
  margin-top: 10rpx;
}
.top-bar .logo {
  height: 42rpx;
  width: 88rpx;
  margin-top: 24rpx;
}
.top-bar .serach {
  width: 52rpx;
  height: 52rpx;
  margin: 16rpx 10px 0;
}
.top-bar .add {
  width: 52rpx;
  height: 52rpx;
}
.main {
  padding-top: 88rpx;
}
.main .Chet {
  padding: 16rpx 32rpx;
  height: 96rpx;
  position: relative;
}
.main .Chet:active {
  background-color: #f3f4f6;
}
.main .Chet image {
  float: left;
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.main .Chet .chet-info {
  float: left;
  width: 590rpx;
  border-bottom: 1px solid #f3f4f6;
  padding-bottom: 16rpx;
}
.main .Chet .chet-info .name {
  width: 520rpx;
  color: #272832;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 10rpx 0 0 32rpx;
}
.main .Chet .chet-info .message {
  width: 520rpx;
  height: 40rpx;
  font-size: 14px;
  color: rgba(39, 40, 50, 0.6);
  height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 32rpx;
}
.main .Chet .chet-info .time {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 12px;
  color: rgba(39, 40, 50, 0.4);
}
.main .Chet .tip {
  min-width: 20rpx;
  height: 36rpx;
  text-align: center;
  padding: 0 6rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 18rpx;
  background: #FF5D5B;
  position: absolute;
  left: 96rpx;
  top: 5rpx;
}

