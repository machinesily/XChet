.status_bar {
  height: 25px;
  width: 100%;
}
.back {
  width: 172rpx;
  height: 88rpx;
}
.back-img {
  width: 44rpx;
  height: 44rpx;
  padding: 20rpx 0 0 24rpx;
  float: left;
}
.main {
  padding: 88rpx 32rpx 0;
}
.main .login,
.main .user,
.main .password,
.main .mail,
.main .err {
  padding-left: 42rpx;
}
.main .user,
.main .mail,
.main .password {
  border: none;
  border-bottom: 1px solid #f3f4f6;
}
.main .login {
  font-size: 56rpx;
  color: #272832;
  padding-top: 314rpx;
}
.main .user,
.main .mail,
.main .password {
  padding-top: 76rpx;
  width: 630rpx;
}
.main .submit {
  width: 520rpx;
  height: 96rpx;
  background-color: #ffe431;
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  margin: 120rpx auto 0;
  color: #272832;
}
.main .submit:active {
  background-color: rgba(39, 40, 50, 0.2);
  color: #ffffff;
}
.main .unSubmit {
  width: 520rpx;
  height: 96rpx;
  background-color: rgba(39, 40, 50, 0.2);
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  margin: 120rpx auto 0;
  color: #ffffff;
}
.main .wrapper {
  position: relative;
}
.main .wrapper image {
  position: absolute;
  width: 42rpx;
  height: 32rpx;
  top: 76rpx;
  right: 0;
}
.main .user-exist,
.main .mail-exist,
.main .mail-incorrect {
  position: absolute;
  right: 0;
  color: #ff5d5b;
}

