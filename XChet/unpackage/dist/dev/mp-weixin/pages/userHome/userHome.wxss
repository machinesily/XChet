.main {
  padding-top: 148rpx;
  text-align: center;
}
.main .user-header {
  width: 406rpx;
  height: 406rpx;
  margin: 0 auto;
  position: relative;
}
.main .user-header .user-img {
  z-index: 10;
  width: 400rpx;
  height: 400rpx;
  border: 6rpx solid #ffffff;
  border-radius: 48rpx;
  box-shadow: 0rpx 36rpx 40rpx 0 rgba(39, 40, 50, 0.1);
}
.main .user-header .sex {
  z-index: 11;
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.main .user-header .sex image {
  padding: 16rpx;
  width: 32rpx;
  height: 32rpx;
}
.main .user-message {
  padding-top: 42rpx;
  color: #272832;
}
.main .user-message .name {
  font-family: PingFangSC-Regular;
  font-size: 52rpx;
}
.main .user-message .nick {
  ont-family: PingFangSC-Regular;
  font-size: 28rpx;
}
.main .user-message .intr {
  margin: 0 auto;
  padding-top: 20rpx;
  width: 552rpx;
  height: 170rpx;
  font-size: 28rpx;
  font-weight: 300;
  line-height: 48rpx;
}
.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 104rpx;
  padding: 0 32rpx 20rpx;
  text-align: center;
}
.foot .button {
  width: 684rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
  background-color: #ffe431;
  border-radius: 10rpx;
}
.foot .button:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.add {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  padding: 0 56rpx;
  background-color: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  color: #272832;
}
.add .name {
  padding: 168rpx 0 40rpx;
  line-height: 74rpx;
  font-size: 52rpx;
}
.add .add-message {
  width: 100%;
  box-sizing: border-box;
  height: 420rpx;
  border-radius: 20rpx;
  background-color: #f3f4f6;
  font-size: 32rpx;
  padding: 18rpx 22rpx;
  line-height: 44rpx;
}
.add-bt {
  position: fixed;
  bottom: -124rpx;
  width: 100%;
  height: 104rpx;
  padding: 0 32rpx 20rpx;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #272832;
}
.add-bt .cancel,
.add-bt .send {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}
.add-bt .cancel:active,
.add-bt .send:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.add-bt .cancel {
  width: 170rpx;
  background: rgba(39, 40, 50, 0.1);
  margin-right: 32rpx;
}
.add-bt .send {
  width: 480rpx;
  background-color: #ffe431;
}

