.status_bar {
  height: 25px;
  width: 100%;
}
.back {
  padding: 20rpx 0;
  width: 48rpx;
  height: 48rpx;
}
.more {
  padding: 38rpx 0;
  width: 52rpx;
  height: 12rpx;
}
.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bg image {
  opacity: 0.4;
  position: absolute;
  left: -10rpx;
  top: -10rpx;
  width: 110%;
  height: 110%;
