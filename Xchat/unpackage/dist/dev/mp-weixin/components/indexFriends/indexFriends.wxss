.chat {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 0 32rpx;
}
.chat:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.chat .img {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.chat .img image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.chat .tip {
  min-width: 20rpx;
  height: 36rpx;
  text-align: center;
  padding: 0 6rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 18rpx;
  background: #ff5d5b;
  position: absolute;
  left: 66rpx;
  top: 20rpx;
}
.chat .group-mark {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background-color: #ffe431;
  border-radius: 8rpx;
  opacity: 0.8;
  bottom: 25rpx;
  right: -5rpx;
}
.chat .chat-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 32rpx 0;
  border-bottom: 1px solid #f3f4f6;
  position: relative;
  width: 590rpx;
}
.chat .chat-info .name {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 470rpx;
  color: #272832;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 32rpx;
}
.chat .chat-info .message {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 40rpx;
  font-size: 14px;
  color: rgba(39, 40, 50, 0.6);
  height: 38rpx;
  width: 496rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 32rpx;
}
.chat .chat-info .time {
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  font-size: 12px;
  color: rgba(39, 40, 50, 0.4);
}

