.chat-ls .time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 34rpx;
  padding: 20rpx 0;
  text-align: center;
}
.chat-ls .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 20rpx 0;
}
.chat-ls .content .user-img {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.chat-ls .content .msg-wrapper {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  max-width: 480rpx;
  margin: 0 16rpx;
}
.chat-ls .content .msg-wrapper .message {
  font-size: 28rpx;
  color: #272832;
  line-height: 44rpx;
  padding: 18rpx 24rpx;
  word-break: break-word;
}
.chat-ls .content .msg-wrapper .photo {
  width: 284rpx;
  max-height: 320rpx;
  border-radius: 20rpx;
}
.chat-ls .content .msg-wrapper .record {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  min-width: 100rpx;
  max-width: 400rpx;
}
.chat-ls .content .msg-wrapper .record-img {
  width: 42rpx;
  height: 42rpx;
  padding-right: 20rpx;
}
.chat-ls .left {
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.chat-ls .left .message {
  background-color: #ffffff;
  border-radius: 0rpx 20rpx 20rpx 20rpx;
}
.chat-ls .right {
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
}
.chat-ls .right .message {
  background-color: #ffe431;
  border-radius: 20rpx 0rpx 20rpx 20rpx;
}
.chat-ls .right .record {
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
}
.chat-ls .right .record-img {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.chat-ls .right .map-name,
.chat-ls .right .map-address {
  text-align: right;
}
.map {
  background-color: #ffffff;
  width: 464rpx;
  border-radius: 20rpx;
}
.map image {
  width: 464rpx;
  height: 284rpx;
}
.map .map-name {
  font-size: 32rpx;
  color: #272832;
  line-height: 44rpx;
  padding: 18rpx 24rpx 0 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.map .map-address {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 44rpx;
  padding: 0 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.map .map-img {
  width: 464rpx;
  height: 284rpx;
  overflow: hidden;
  border-radius: 20rpx;
}

