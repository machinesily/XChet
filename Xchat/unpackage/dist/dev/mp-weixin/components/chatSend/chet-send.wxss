.send {
  background-color: #f4f4f4;
  border-top: 1px solid rgba(39, 40, 50, 0.1);
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.chet-send {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  box-sizing: border-box;
  padding: 14rpx 15rpx;
}
.chet-send image {
  width: 56rpx;
  height: 56rpx;
  margin: 10rpx 10rpx;
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
}
.chet-send .btn {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx 10rpx;
}
.chet-send .record {
  text-align: center;
}
.chet-send .record:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.emoji {
  width: 100%;
  height: 460rpx;
  background-color: #ecedee;
  box-shadow: 0px -1rpx 0 0 rgba(0, 0, 0, 0.1);
}
.emoji .delete {
  background-color: rgba(255, 255, 255, 0.96);
  width: 150rpx;
  height: 100rpx;
  position: fixed;
  right: 40rpx;
  bottom: 50rpx;
  border-radius: 10rpx;
  text-align: center;
}
.emoji .delete image {
  width: 80rpx;
  height: 100rpx;
}
.confirm {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  width: 100rpx;
  height: 36rpx;
  text-align: center;
  margin: 10rpx 0;
  padding: 10rpx;
  background-color: #ffe431;
  border-radius: 10rpx;
}
.more {
  width: 100%;
  height: 460rpx;
  background-color: #ecedee;
  box-shadow: 0px -1rpx 0 0 rgba(0, 0, 0, 0.1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.more .more-list {
  width: 25%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.more .more-list image {
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 24rpx;
}
.more .more-list image:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.more .more-list .title {
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  padding-top: 10rpx;
}
.record-bg {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 99;
}
.record-bg .record-time-wrapper {
  width: 600rpx;
  height: 86rpx;
  background-color: rgba(255, 255, 255, 0.2);
  position: absolute;
  left: 50%;
  top: 30%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border-radius: 42rpx;
  text-align: center;
}
.record-bg .record-time {
  line-height: 86rpx;
  background-color: #ffe431;
  max-width: 600rpx;
  margin: 0 auto;
  border-radius: 42rpx;
  -webkit-transition: width 1s;
  transition: width 1s;
}
.record-bg .record-del {
  position: absolute;
  bottom: 10%;
  text-align: center;
  width: 100%;
  color: #ffffff;
}

