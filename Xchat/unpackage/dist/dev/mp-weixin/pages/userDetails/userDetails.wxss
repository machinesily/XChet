.status_bar {
  height: 25px;
  width: 100%;
}
.top-bar {
  background-color: #ffffff;
  border-bottom: 1px solid #f3f4f6;
}
.top-bar .back {
  float: left;
  padding: 20rpx 0;
  width: 48rpx;
  height: 48rpx;
}
.top-bar .title {
  color: #272832;
  font-size: 40rpx;
  padding: 16rpx  0;
}
.top-bar .cancel,
.top-bar .confirm {
  font-size: 32rpx;
}
.top-bar .confirm {
  width: 64rpx;
  color: #4aaaff;
}
.main {
  padding-top: 118rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: 100%;
}
.main .column {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  border-bottom: 1px solid #f3f4f6;
}
.main .column .row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.main .column .title {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #272832;
  line-height: 112rpx;
}
.main .column .head {
  height: 148rpx;
