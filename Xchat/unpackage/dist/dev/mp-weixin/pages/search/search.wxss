.status_bar {
  height: 25px;
  width: 100%;
}
.topBar {
  border-bottom: 1px solid #f3f4f6;
  text-align: left;
}
.topBar .search-wrapper {
  width: 600rpx;
  position: relative;
}
.topBar .search-wrapper .search {
  background: #f3f4f6;
  border-radius: 20rpx;
  height: 60rpx;
  padding-right: 45rpx;
  padding-left: 10rpx;
}
.topBar .search-wrapper .search-img {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.topBar .cancel {
  font-size: 28rpx;
  color: #272832;
}
.main {
  padding: 88rpx 32rpx 0;
  color: #272832;
}
.main .title {
  padding-top: 34rpx;
  font-size: 44rpx;
  font-weight: 600;
}
.main .userList {
  width: 100%;
  height: 100rpx;
  padding: 20rpx 0 0;
  margin: auto 0;
}
.main .userList image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  float: left;
}
.main .userList .names {
  width: 450rpx;
  padding-left: 32rpx;
  height: 80rpx;
  font-size: 28rpx;
  float: left;
}
.main .userList .names .name {
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main .userList .names .mail {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main .userList .button {
  float: left;
  width: 120rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.main .userList .button:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.main .userList .send {
  background-color: #ffe431;
}
.main .userList .add {
  background-color: rgba(74, 170, 255, 0.1);
  color: #5799ff;
}

