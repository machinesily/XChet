.status_bar {
  height: 25px;
  width: 100%;
}
.top-bar {
  background-color: #FFFFFF;
  border-bottom: 1px solid #f3f4f6;
}
.top-bar .mine {
  width: 68rpx;
  height: 68rpx;
}
.top-bar .mine image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 20rpx;
}
.top-bar .search, .top-bar .add {
  width: 52rpx;
  height: 52rpx;
  margin-left: 32rpx;
}
.main {
  padding-top: 88rpx;
}
.main .Chet {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 32rpx 32rpx;
  height: 96rpx;
  position: relative;
}
.main .Chet:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.main .Chet image {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  float: left;
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.main .Chet .chet-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #f3f4f6;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.main .Chet .chet-info:active {
  border-bottom: none;
}
.main .Chet .chet-info .name {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 500rpx;
  color: #272832;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 32rpx;
}
.main .Chet .chet-info .message {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 40rpx;
  font-size: 14px;
  color: rgba(39, 40, 50, 0.6);
  height: 38rpx;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 32rpx;
}
.main .Chet .time {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  font-size: 12px;
  color: rgba(39, 40, 50, 0.4);
}
.main .Chet .tip {
  min-width: 20rpx;
  height: 36rpx;
  text-align: center;
  padding: 0 6rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 18rpx;
  background: #FF5D5B;
  position: absolute;
  left: 96rpx;
  top: 5rpx;
}

