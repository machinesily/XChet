.status_bar {
  height: 25px;
  width: 100%;
  background-color: rgba(244, 244, 244, 0.96);
}
.top-bar {
  background-color: rgba(244, 244, 244, 0.96);
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.top-bar .back {
  float: left;
  padding: 20rpx 0;
  height: 48rpx;
}
.top-bar .title {
  color: #272832;
  font-size: 40rpx;
  padding: 16rpx 0;
}
.top-bar .confirm {
  width: 64rpx;
}
.main {
  padding-top: 88rpx;
}
.main .wrapper {
  position: fixed;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
}
.main .group-img {
  padding-top: 60rpx;
  background-color: #ffffff;
  text-align: center;
}
.main .group-img image {
  width: 196rpx;
  height: 196rpx;
  border-radius: 20rpx;
  box-shadow: 0px 36rpx 40rpx 0 rgba(39, 40, 50, 0.1);
}
.main .group-name {
  background-color: #f3f4f6;
  width: 686rpx;
  height: 92rpx;
  margin: 62rpx auto 40rpx;
  border-radius: 40rpx;
}
.main .group-name input {
  padding: 24rpx 20rpx;
  text-align: center;
}
.main .title {
  font-size: 44rpx;
  font-weight: 600;
  margin-left: 32rpx;
}
.friends {
  padding: 550rpx 32rpx 200rpx;
}
.friends .friends-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.friends .friends-list image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin: 32rpx 32rpx;
}
.friends .friends-list .name {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 480rpx;
  color: #272832;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.confirm-wrapper {
  width: 100%;
  height: 168rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}
.confirm-wrapper .confirm {
  margin: 0 auto;
  width: 80%;
  height: 80rpx;
  border-radius: 20rpx;
  font-size: 16px;
  line-height: 80rpx;
}
.confirm-wrapper .confirm:active {
  background-color: rgba(39, 40, 50, 0.2);
}
.select {
  background-color: #ffe431;
}
.noselcet {
  background-color: rgba(39, 40, 50, 0.2);
}

